{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "types": ["astro/client"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@public/*": ["./public/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.mts", "**/*.mjs", "**/*.astro"],
  "exclude": ["node_modules", "dist"]
}
